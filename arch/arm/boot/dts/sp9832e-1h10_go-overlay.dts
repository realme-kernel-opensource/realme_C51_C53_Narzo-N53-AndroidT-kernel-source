#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>

#include <dt-bindings/input/input.h>
#include <dt-bindings/gpio/gpio.h>
#include <dt-bindings/clock/sprd,sc9832e-clk.h>
#include "lcd/lcd_ili9881c_truly_mipi_hd.dtsi"
#include "lcd/lcd_r61350_truly_mipi_hd.dtsi"
